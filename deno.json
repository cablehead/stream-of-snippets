{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "date-fns": "npm:date-fns@^4.1.0",
    "highlight.js": "npm:highlight.js@^11.10.0",
    "marked": "npm:marked@^14.1.4",
    "marked-highlight": "npm:marked-highlight@^2.2.0",
    "scru128": "npm:scru128@^3.0.6",
    "solid-js": "npm:solid-js@^1.9.2",
    "solid-styled-components": "npm:solid-styled-components@^0.28.5",
    "vite": "npm:vite@^5.4.9",
    "vite-plugin-solid": "npm:vite-plugin-solid@^2.10.2"
  }
}
